<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.root.ariel_trivia_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/trivia_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TriviaActivity"
            android:noHistory="true" />
        <activity android:name=".SelectTriviaActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".SuccessActivity" />
        <activity
            android:name=".CommentActivity"
            android:label="@string/title_activity_comment" />
        <activity android:name=".RateActivity" />
        <activity
            android:name=".AfterLoginActivity"
            android:label="@string/title_activity_user_options" />
        <activity android:name=".PostTriviaActivity"></activity>
        <activity android:name=".RegisterActivity"></activity>
        <activity android:name=".LoginActivity"></activity>
    </application>

</manifest>